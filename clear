pipeline {
    environment {
        registry = "tsimur1010/project"
        registryCredential = 'dockerhub_id'
        dockerImage = ''
    }
    agent any
    stages {
        stage('Clear service on kubernetes') {
            steps {
                script {
                    sh "kubectl delete services --all --namespace=projectsa"
                }
            }
        }
        stage('Clear deploy on kubernetes') {
            steps {
                script {
                    sh "kubectl delete deployment --all --namespace=projectsa"
                }
            }
        }
        stage('Clear pods on kubernetes') {
            steps {
                script {
                    sh "kubectl delete pod --all --namespace=projectsa"
                }
            }
        }
        /*stage('Clear project folder') {
            steps {
                script {
                    sh "rm -r ~jenkins/workspace/firstDeploy/*"
                }
            }
        }*/
        stage('Clear db') {
            steps {
                script {
                withCredentials([usernamePassword(credentialsId: 'mysqlcred', passwordVariable: 'sqlpass', usernameVariable: 'sqluser'), string(credentialsId: 'sqlip', variable: 'ipsql'), usernamePassword(credentialsId: 'wpdb', passwordVariable: 'dbpass', usernameVariable: 'dbuser')]) {
                    sh "mysql -u $sqluser -p$sqlpass -h $ipsql -e \"DROP USER '$dbuser'@'localhost';\""
                    sh "mysql -u $sqluser -p$sqlpass -h $ipsql -e \"DROP USER '$dbuser'@'$ipsql';\""
                    sh "mysql -u $sqluser -p$sqlpass -h $ipsql -e \"DROP DATABASE wordpress;\""
                    }
                }
            }
        }
    }

    post {
        // only triggered when blue or green sign
        success {
            slackSend channel: '#project_notification',
            message: 'Clearing, success'
        }
        // triggered when red sign
        failure {
            slackSend channel: '#project_notification',
            message: 'Clearing, failure'
        }
    }

}
